{
  "name": "rapidmed",
  "version": "0.0.1",
  "description": "A boilerplate for starting js code",
  "keywords": [
    "rapidmed",
    "buildforsdg",
    "sdg"
  ],
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "__tests__"
  },
  "scripts": {
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cover": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint \"src/**/*.js\"",
    "remark-lint": "remark '*.md' '.github\\ISSUE_TEMPLATE\\*.md'",
    "lint:debug": "eslint --debug \"src/**/*.js\"",
    "lint:fix": "eslint --fix \"src/**/*.js\"",
    "build": "babel src --out-dir dist --delete-dir-on-start",
    "dev": "DEBUG=log NODE_ENV=development nodemon --exec babel-node ./src/index.js",
    "start": "NODE_ENV=production node ./dist/index.js"
  },
  "author": {
    "name": "Build For SDG",
    "email": "buildforsdg@andela.com"
  },
  "homepage": "https://github.com/BuildForSDG/team-006-backend#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/BuildForSDG/team-006-backend.git"
  },
  "bugs": {
    "url": "https://github.com/BuildForSDG/team-006-backend/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "cloudinary": "^1.21.0",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "custom-env": "^2.0.1",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.3",
    "express-jwt-permissions": "^1.3.3",
    "firebase-admin": "^8.12.1",
    "geo-tz": "^6.0.0",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.2",
    "multer-storage-cloudinary": "^2.2.1",
    "pg": "^8.2.1",
    "pg-hstore": "^2.3.3",
    "pgtools": "^0.3.0",
    "sequelize": "^5.21.10",
    "sequelize-cli": "^5.5.1",
    "sequelize-noupdate-attributes": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "babel-jest": "^25.4.0",
    "coveralls": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^25.4.0",
    "nodemon": "^2.0.4",
    "remark-cli": "^8.0.0",
    "remark-preset-lint-consistent": "^3.0.0",
    "remark-preset-lint-markdown-style-guide": "^3.0.0",
    "remark-preset-lint-recommended": "^4.0.0",
    "sequelize-auto-v2": "^0.5.3",
    "supertest": "^4.0.2",
    "yargs": "^15.3.1"
  },
  "browserslist": [
    "last 1 Chrome versions"
  ]
}
